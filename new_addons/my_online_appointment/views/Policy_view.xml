<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        # hien o ngoai
        <record id="policy_view_tree" model="ir.ui.view">
            <field name="name">policy_view_tree</field>
            <field name="model">restaurant.policy</field>
            <field name="arch" type="xml">
                <tree string="policy_tree">
                    <field name="name" optional="show"/>
                    <field name="description" optional="show"/>
                </tree>
            </field>
        </record>

        # trong cho tao moi
        <record id="policy_view_form" model="ir.ui.view">
            <field name="name">policy_view_form</field>
            <field name="model">restaurant.policy</field>
            <field name="arch" type="xml">
                <form string="policy_form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
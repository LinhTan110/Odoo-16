<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="Datlich_form">
        <link rel="text/css" href="/my_online_appointment/static/src/css/main.css"/>
        <script type="text/javascript" src="/my_online_appointment/static/src/js/main.js"/>
        <script type="text/javascript" src="/my_online_appointment/static/src/js/datlich.js"/>
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">

                <t t-call="my_online_appointment.banner"/>

                <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                    <div class="oe_structure container">
                        <div class="row">
                            <span name="header_row"/>
                            <div class="col-12">
                                <div class="row">
                                    <span class="o_page_header h1 mt32 mb24">
                                        Welcome to Restaurant
                                    </span>
                                    <br/>
                                    <span class="h6 text-muted">
                                        Please Fill Out All Information For Your Appointment.
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="s_text_image pt32 pb32 o_colored_level" data-snippet="s_image_text"
                         data-name="Image - Text" style="background-image: none;">
                    <div class="container">
                        <div class="row align-items-center">

                            <t t-call="my_online_appointment.Form_appointment"/>

                        </div>
                    </div>
                </section>

            </div>
        </t>
    </template>

    <template id="Form_appointment">
        <form id="create_appointment_form" action="/create_appointment" method="POST">
            <div class="pt16 pb16 o_colored_level row">
                <div class="col-lg-8">
                    <div t-attf-class="mb-3 col-lg-12 row">
                        <div class="mb-3 col-lg-12" id="div_name">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" t-attf-class="form-control"
                                   t-att-value="default_name"/>
                        </div>
                    </div>
                    <div class="mb-3 col-lg-12 row">
                        <div t-attf-class="mb-3 col-lg-6" id="div_email">
                            <label t-attf-class="col-form-label" for="email">Email</label>
                            <input type="email" name="email" id="email" t-attf-class="form-control"
                                   t-att-value="default_email"/>
                        </div>
                        <div t-attf-class="mb-3 col-lg-6" id="div_phone">
                            <label class="col-form-label" for="phone">Phone</label>
                            <input type="phone" name="phone" id="phone" t-attf-class="form-control"
                                   t-att-value="default_phone"/>
                        </div>
                    </div>
                    <div t-attf-class="mb-3 col-lg-12 row">
                        <div class="mb-3 col-lg-6" id="div_restaurant">
                            <label for="restaurant_name">Restaurant</label>
                            <input type="text" name="restaurant_name" id="restaurant_name"
                                   t-attf-class="form-control" t-att-value="default_restaurant"/>
                        </div>
                        <div class="mb-3 col-lg-6" id="div_address">
                            <label for="address">Restaurant address</label>
                            <input type="text" name="address" id="address"
                                   t-attf-class="form-control" t-att-value="default_address"/>
                        </div>
                    </div>
                    <div class="col-lg-12 row">
                        <div t-attf-class="mb-3 col-lg-6" id="div_start_date">
                            <label t-attf-class="col-form-label" for="start">Start Date</label>
                            <input type="datetime-local" class="form-control form_input"
                                   name="start" id="start" required="true"/>
                        </div>
                        <div class="col-lg-3">
                            <label class="col-form-label" for="duration">Duration (hours)</label>
                            <div class="input-group">
                                <input type="number" class="form-control text_input" name="duration"
                                       id="duration" min="1" step="0.25" value="1"/>
                                <span class="input-group-text">hour</span>
                            </div>
                        </div>
                        <div class="col-lg-3 check_form">
                            <label class="col-form-label label_check" for="allday">All Day</label>
                            <input type="checkbox" class="form-check-input check_input"
                                   name="allday" id="allday"/>
                        </div>
                    </div>

                    <div class="mb-3 col-lg-12 row">
                        <div class="col-lg-4">
                            <label class="col-form-label" for="capacity">Capacity</label>
                            <select class="form-select" name="capacity" id="capacity">
                                <option value="capacity" disabled="True" selected="True">Select
                                    Capacity
                                </option>
                                <t t-foreach="capacitys" t-as="capacity">
                                    <option t-att-value="capacity.id">
                                        <t t-esc="capacity.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        <div class="mb-3 col-lg-4">
                            <label class="col-form-label" for="location_table">Location Table
                            </label>
                            <select class="form-select" name="location_table" id="location_table">
                                <option value="location_table" disabled="True" selected="True">
                                    Select Location Table
                                </option>
                                <t t-foreach="locations" t-as="location">
                                    <option t-att-value="location.id">
                                        <t t-esc="location.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        <div class="mb-3 col-lg-4">
                            <label class="col-form-label" for="characteristic">Characteristic
                            </label>
                            <select class="form-select" name="characteristic" id="characteristic">
                                <option value="characteristic" disabled="True" selected="True">
                                    Select Characteristic
                                </option>
                                <t t-foreach="characteristics" t-as="characteristic">
                                    <option t-att-value="characteristic.id">
                                        <t t-esc="characteristic.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                    </div>

                    <!--                    <t t-call="my_online_appointment.form_selection_table"/>-->

                    <div class="mb-3 col-lg-12 row">
                        <div class="col-lg-12">
                            <fieldset class="form-group">
                                <label class="col-form-label" for="manager_table_select">Ghi chú
                                </label>
                                <textarea placeholder="Ghi chú" name="note" id="note"
                                          class="form-control form-control-lg" rows="7"/>
                            </fieldset>
                        </div>
                        <div class="col-lg-12" style="padding-top:36px;">
                            <a href="/shop" class="btn btn-secondary" style="float: left;">Products</a>
                            <button type="submit" class="btn btn-secondary" style="float: right;">Next
                                <span class="fa fa-arrow-right"/>
                            </button>
                        </div>
                    </div>

                </div>
                <div class="col-lg-4">
                    <img src="/web/image/website.s_image_text_default_image"
                         class="img img-fluid mx-auto"
                         alt="" loading="lazy" data-original-id="257"
                         data-original-src="/website/static/src/img/snippets_demo/s_image_text.jpg"
                         data-mimetype="image/jpeg"
                         data-sider-select-id="641d7545-dbd9-4652-b4a8-d0e0a584984b"
                         data-bs-original-title="" title="" aria-describedby="tooltip271981"/>
                </div>
            </div>
        </form>
    </template>

    <template id="form_selection_table">
        <link rel="text/css" href="/my_online_appointment/static/src/css/main.css"/>
        <script type="text/javascript" src="/my_online_appointment/static/src/js/main.js"/>
        <div class="col-lg-12">
            <button type="submit" id="button_search" class="btn btn-secondary">Search Tables</button>
        </div>
        <div t-attf-class="mb-3 col-lg-12 row">
            <div class="table-container mb-3 col-lg-12" id="buttons_container" style="display: none;">
                <!-- Buttons will be dynamically added here -->
            </div>
        </div>
    </template>

    <template id="banner">
        <section class="s_banner parallax s_parallax_is_fixed pt96 pb96 o_colored_level"
                 data-scroll-background-ratio="1" data-snippet="s_banner" data-name="Banner"
                 style="background-image: none;">
            <span class="s_parallax_bg oe_img_bg"
                  style="background-image: url('/web/image/website.s_banner_default_image'); background-position: 50% 0;"/>
            <div class="container">
                <div class="row s_nb_column_fixed">
                    <div class="col-lg-6 jumbotron rounded o_cc o_cc1 pt32 pb32 o_colored_level"
                         data-name="Box">
                        <h1>
                            <font style="font-size: 62px;" class="o_default_snippet_text">Sell Online. Easily.
                            </font>
                        </h1>
                        <p class="lead o_default_snippet_text">This is a simple hero unit, a simple
                            jumbotron-style component for calling extra attention to featured content or
                            information.
                        </p>
                        <a class="btn btn-primary mb-2 o_default_snippet_text" href="/contactus">Contact Us</a>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        # hien o ngoai
        <record id="manager_table_view_tree" model="ir.ui.view">
            <field name="name">manager_table_view_tree</field>
            <field name="model">manager.table</field>
            <field name="arch" type="xml">
                <tree string="manager_table_tree">
                    <field name="name" optional="show"/>
                    <field name="capacity" optional="show"/>
                    <field name="location_table" optional="show"/>
                    <field name="characteristic" optional="show"/>
                    <field name="price" optional="show"/>
                </tree>
            </field>
        </record>
        # trong cho tao moi
        <record id="manager_table_view_form" model="ir.ui.view">
            <field name="name">manager_table_view_form</field>
            <field name="model">manager.table</field>
            <field name="arch" type="xml">
                <form string="manager_table_form">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar"
                               options='{"preview_image": "image_128"}'/>
                        <div class="oe_title">
                            <label for="name" string="Name Table" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="name of employee"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="capacity"/>
                                <field name="location_table"/>
                                <field name="price" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="characteristic"/>
                                <field name="statu"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Mô tả">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="manager_table_view_kanban" model="ir.ui.view">
            <field name="name">manager_table.kanban</field>
            <field name="model">manager.table</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="image_128"/>
                    <field name="capacity"/>
                    <field name="location_table"/>
                    <field name="characteristic"/>
                    <field name="price"/>
                    <field name="currency_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                <div class="o_kanban_image_fill_left d-none d-md-block">
                                    <img t-att-src="kanban_image('manager.table', 'image_128', record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details d-flex flex-column justify-content-between">
                                    <strong class="o_kanban_record_title">
                                        <t t-if="record.name">
                                            <h1>
                                                <span t-esc="record.name.value"/>
                                            </h1>
                                        </t>
                                    </strong>
                                    <ul>
                                        <li>
                                            <h6>
                                                <strong>Sức chứa: </strong>
                                                <t t-if="record.capacity">
                                                    <span t-esc="record.capacity.value"/>
                                                </t>
                                            </h6>
                                        </li>
                                        <li>
                                            <h6>
                                                <strong>Vị trí: </strong>
                                                <t t-if="record.location_table">
                                                    <span t-esc="record.location_table.value"/>
                                                </t>
                                            </h6>
                                        </li>
                                        <li>
                                            <h6>
                                                <strong>Đặc điểm: </strong>
                                                <t t-if="record.characteristic">
                                                    <span t-esc="record.characteristic.value"/>
                                                </t>
                                            </h6>
                                        </li>
                                        <li>
                                            <h6>
                                                <strong>Giá: </strong>
                                                <t t-if="record.price and record.currency_id">
                                                    <span t-esc="record.price.value" style="margin-right: 5px;"/>
                                                    <span t-esc="record.currency_id.value"/>
                                                </t>
                                            </h6>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>



    </data>
</odoo>